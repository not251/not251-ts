{
  "compilerOptions": {
    "target": "ES6", // Target modern ES6+
    "module": "ESNext", // Use modern module system
    "outDir": "./dist/es6", // Output directory for modern build
    "moduleResolution": "node", // Resolve modules in Node.js style
    "esModuleInterop": true, // Enable interoperability for CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true, // Skip type-checking of declaration files
    "declaration": true, // Generate .d.ts declaration files
    "declarationDir": "./dist/es6/types", // Separate output directory for declaration files
    "emitDeclarationOnly": false // Only emit declaration files (no JavaScript output)
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]
}
